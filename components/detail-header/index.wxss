/* components/detail-header/index.wxss */
.header {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  /* relative替换fixed 即取消固定(注意同时取消detail-songs样式中.song-list的上外边距) */
  /* position: relative;
  left: -20rpx; */
  display: flex;
  flex-direction: column;
  height: 450rpx;
  width: 100vw;
  color: #fff;
}

.bg .bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg .bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
  z-index: -1;
}

.content {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
}

.content .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}

.content .info {
  position: relative;
  height: 220rpx;
  flex: 1;
  margin-left: 50rpx;
}

.content .anthor {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.content .anthor .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.content .anthor .nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}

.content .info .desc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.operation {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-top: 30rpx;
}

.operation .item {
  display: flex;
  align-items: center;
}

.operation .item .icon {
  width: 48rpx;
  margin-right: 10rpx;
}

.operation .item .text {
  font-size: 28rpx;
}
