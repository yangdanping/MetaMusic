/* pages/music-player/music-player.wxss */
@import '../../style/animation.wxss';

page {
  color: #fff;
}
/* 自定义导航 */
.tab {
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgb(185, 185, 185);
  font-size: 28rpx;
}

.tab .divider {
  padding: 0 10rpx;
}

.tab .active {
  color: #fff;
  font-size: 30rpx;
}

.bg,
.bg-mask {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  /* 只有定位了才能用z-index */
  z-index: -1;
}

.bg-mask {
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
}

/* 内容样式------------------------------ */
.content {
  color: #fff;
}

.music {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx 60rpx;
  box-sizing: border-box;
  animation: fadein 1.5s forwards;
}
.music .album {
  display: flex;
  align-items: center;
  /* 封面与歌词比例分为5:1 */
  flex: 5;
}

.album .image {
  border-radius: 12rpx;
  animation: moveDown 1s forwards;
}

/* 歌曲信息 */
.music .info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.info .name {
  font-weight: 700;
  font-size: 60rpx;
}

.info .singer {
  font-size: 40rpx;
  color: #ccc;
  padding: 10rpx 0;
}
.info .album {
  font-size: 30rpx;
}

.music .lyric {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  /* 歌词高度动态计算出来 */
  /* height: 200rpx; */
  border-radius: 12rpx;
  font-size: 38rpx;
  background: rgba(0, 0, 0, 0.2);
}

/* 进度 */
.progress {
  margin: 10rpx 0;
}

.slider {
  margin: 0 0 18rpx 20rpx;
}

.time {
  display: flex;
  justify-content: space-between;
  color: #ccc;
  font-size: 22rpx;
}

.time .current {
  margin-left: 10rpx;
}

/* 操作css */
.operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0 30rpx;
}

.operation .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  padding: 0;
}

.operation .btn-mode {
  width: 80rpx;
  height: 80rpx;
}

.operation .btn-pause {
  width: 130rpx;
  height: 130rpx;
}
