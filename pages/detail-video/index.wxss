/* pages/detail-video/index.wxss */
page {
  /* 对page进行修改时不用rpx,确保在不同机型上没问题 */
  padding-top: 280px;
}

.video-container {
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: 99;
  background: #f6f6f6;
}

.video {
  width: 100%;
}

.video-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 110rpx;
  background: #f6f6f6;
}

.video-info {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.cover {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  border: 7px solid #000;
}

.img {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  overflow: hidden;
  /*3s后播放，linear:动画从头到尾的速度是相同的,infinite:无限次数循环。*/
  animation: musicRotate 3s linear infinite paused;
}

/* 播放状态 */

.img.play {
  animation-play-state: running;
}

.img.paused {
  animation-play-state: paused;
}

.name {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.love {
  margin-right: 20rpx;
}

.love > image {
  height: 50rpx;
  width: 50rpx;
  transition: all 0.5s;
}

.love > image:active {
  transform: scale(1.1);
}

.van-tabs__wrap {
  box-shadow: 0 0 30rpx rgb(0, 0, 0, 0.4);
}

.abstract {
  /* background: pink; */
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.tag {
  margin: 0 35rpx;
}
.mv-title {
  font-size: 40rpx;
}

@keyframes musicRotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.video-loading {
  position: fixed;
  top: 50vh;
  left: 50%;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 8px;
  width: 230rpx;
  height: 230rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateX(-50%);
  z-index: 99;
}
