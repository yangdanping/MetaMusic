/* pages/detail-video/index.wxss */
page {
  /* 对page进行修改时不用rpx,确保在不同机型上没问题 */
  padding-top: 275px;
}

.video-container {
  position: fixed;
  top: 0;
  width: 100vw;
  z-index: 99;
  background: #f6f6f6;
}

.video-container > video {
  width: 100%;
}

.video-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 94rpx;
  background: #f6f6f6;
}

.video-info {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.video-info .cover {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  border: 7px solid #000;
}

.cover .img {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  overflow: hidden;
  /*3s后播放，linear:动画从头到尾的速度是相同的,infinite:无限次数循环。*/
  animation: musicRotate 6s linear infinite paused;
}

/* 播放状态 */
.cover .img.play {
  animation-play-state: running;
}

.cover .img.paused {
  animation-play-state: paused;
}

.video-info .name {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.love {
  margin-right: 20rpx;
}

.love > image {
  height: 50rpx;
  width: 50rpx;
  transition: all 0.5s;
}

.love > image:active {
  transform: scale(2);
}

.van-tabs__wrap {
  box-shadow: 0 0 30rpx rgb(0, 0, 0, 0.4);
}

.abstract-1 {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.abstract-1 .tag {
  margin: 0 35rpx;
}

.abstract-1 .mv-title {
  font-size: 40rpx;
}

.abstract-2 {
  padding-left: 35rpx;
  font-size: 28rpx;
  color: #9c9c9c;
}

.operation {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1px solid #ccc;
  margin-bottom: 40rpx;
}

.operation > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #9c9c9c;
  font-size: 24rpx;
}

.operation > view > image {
  height: 60rpx;
  width: 60rpx;
}

.relative {
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
}

/* 评论区 */
.comment {
  margin-top: 20rpx;
}

.comment .item {
  position: relative;
  display: flex;
  border-bottom: 1px solid #ccc;
  padding: 20rpx 0;
  margin: 20rpx 0;
}
.comment .item .like {
  position: absolute;
  right: 20rpx;
  top: 0;
  color: #9c9c9c;
}
.item .like .likeCount {
  margin-right: 10rpx;
}
.comment .item .avatar {
  height: 80rpx;
  width: 80rpx;
  margin: 0 20rpx;
}

.avatar image {
  height: 100%;
  width: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.content {
  display: flex;
  flex-direction: column;
}

.content .time {
  font-size: 30rpx;
  color: #9c9c9c;
}

.content .mainContent.twoLine {
  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}

@keyframes musicRotate {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.video-loading {
  position: fixed;
  top: 50vh;
  left: 50%;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 8px;
  width: 230rpx;
  height: 230rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transform: translateX(-50%);
  z-index: 99;
}
